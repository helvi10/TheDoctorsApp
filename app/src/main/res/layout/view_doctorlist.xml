<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewDoctor"
                android:layout_width="104dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/tw__composer_logo_blue" />

            <TextView
                android:id="@+id/textViewDoctorName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"

                android:layout_marginStart="141dp"
                android:text="TextView"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewQualification"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textViewDoctorName"
                android:layout_below="@+id/textViewDoctorName"
                android:layout_marginTop="19dp"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewRating"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/textViewQualification"
                android:layout_below="@+id/textViewQualification"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textSize="18sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>