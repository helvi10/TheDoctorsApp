<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.helvi.thedoctorsapplication.activities.fragment.CategoryFragment"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Top Categories"
        android:textColor="#212f84"
        android:textSize="30dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCategory1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="29dp"
        android:layout_marginTop="44dp"
        android:background="@color/tw__blue_pressed_light">


        <TextView
            android:id="@+id/textViewCategory1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cardViewCategory1"
            android:layout_alignTop="@+id/cardViewCategory1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:text="Dentist"
            android:textColor="#212f84"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/dentist" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
    android:id="@+id/cardViewCategory2"
    android:layout_width="150dp"
    android:layout_height="100dp"
        android:layout_alignTop="@+id/cardViewCategory1"
        android:layout_toEndOf="@+id/cardViewCategory1"
        android:layout_marginStart="38dp">

          <TextView
                android:id="@+id/textViewCategory2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="14dp"
                android:layout_marginTop="60dp"
                android:text="EyeCare"
                android:textColor="#212f84"
                android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/eye" />

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCategory3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/cardViewCategory1"
        android:layout_alignStart="@+id/cardViewCategory1">

               <TextView
                android:id="@+id/textViewCategory3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="60dp"
                   android:layout_marginLeft="10dp"
                android:text="Surgeon"
                android:textColor="#212f84"
                android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/surgeon" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCategory4"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/cardViewCategory3"
        android:layout_alignStart="@+id/cardViewCategory2"
        android:layout_alignBottom="@+id/cardViewCategory3">


        <TextView
            android:id="@+id/textViewCategory4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:text="Nutritionists"
            android:textColor="#212f84"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/kit" />



    </android.support.v7.widget.CardView>


</RelativeLayout>
